@model FMS_M1_175272M.Models.ViewModels.Account.LoginVM
<link rel="stylesheet" href="~/css/details.css" />

<h3>Login Page</h3>

<p><a asp-controller="Account" asp-action="Register">Create a new account!</a></p>

<form asp-controller="Account" asp-action="Login" 
      asp-route-returnUrl="@ViewBag.ReturnUrl"
      method="post">

    <div asp-validation-summary="All" id="validationSummary"></div>

    <section>
        
        <p>
            <label asp-for="UserName"></label>
            <input asp-for="UserName" value="@(Model.UserName)" />
        </p>

        <p>
            <label asp-for="Password"></label>
            <input asp-for="Password" value="@(Model.Password)" />
        </p>

        <p>
            <label asp-for="RememberMe"></label>
            @{
                if (Model.RememberMe)
                {
                    <input asp-for="RememberMe" type="checkbox" value="true" checked/>
                }
                else
                {
                    <input asp-for="RememberMe" type="checkbox" value="true" />
                }
            }
        </p>
    </section>

    <p>
        <button type="submit">Submit</button>
        <button type="reset">Reset</button>
    </p>
</form>